/* 账号列表页面样式 */

.container {
  min-height: 100vh;
  background: #f5f5f7;
  overflow-x: hidden;
  width: 100%;
}

/* 顶部导航栏 */
.nav-bar {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 30rpx 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 账号列表 */
.account-list {
  width: 100%;
  box-sizing: border-box;
  height: calc(100vh - 200rpx);
  overflow-x: hidden;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  width: 100%;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #8e8e93;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #c7c7cc;
}

/* 账号卡片容器 */
.account-cards {
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 账号卡片 */
.account-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.account-card:active {
  transform: scale(0.98);
}

.account-card.default {
  border: 2rpx solid #667eea;
  box-sizing: border-box;
}

.account-card.inactive {
  opacity: 0.6;
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f7;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.account-info {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.account-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.account-details {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.account-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
  gap: 8rpx;
  min-width: 0;
  overflow: hidden;
}

.account-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1d1d1f;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 1;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.badge.default {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.badge.default .badge-text {
  color: white;
}

.account-label {
  font-size: 24rpx;
  color: #8e8e93;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 状态指示器 */
.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.status-indicator.active {
  background: #34c759;
}

.status-indicator.inactive {
  background: #c7c7cc;
}

/* 卡片统计 */
.card-stats {
  display: flex;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 0;
  padding: 0 4rpx;
  box-sizing: border-box;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  font-family: monospace;
  word-break: break-word;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: center;
}

.stat-value.stat-number {
  font-size: 24rpx;
}

.stat-value.profit {
  color: #34c759;
}

.stat-value.loss {
  color: #ff3b30;
}

.stat-label {
  font-size: 24rpx;
  color: #8e8e93;
  white-space: nowrap;
}

.stat-divider {
  width: 1rpx;
  background: #e5e5ea;
  margin: 0 20rpx;
  flex-shrink: 0;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  background: #f9f9f9;
  gap: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.action-btn {
  flex: 1;
  min-width: 120rpx;
  max-width: calc(50% - 10rpx);
  height: 60rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
  border: none;
  padding: 0;
  box-sizing: border-box;
}

.action-btn.default {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.edit {
  background: #007aff;
  color: white;
}

.action-btn.disable {
  background: #ff9500;
  color: white;
}

.action-btn.enable {
  background: #34c759;
  color: white;
}

.action-btn.delete {
  background: #8e8e93;
  color: white;
}

/* 添加账号按钮 */
.add-account-section {
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1rpx solid #e5e5ea;
  width: 100%;
  box-sizing: border-box;
}

.add-account-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  border: none;
  padding: 0;
  box-sizing: border-box;
}

.add-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}
