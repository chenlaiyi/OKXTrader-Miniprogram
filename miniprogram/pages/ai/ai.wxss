/* pages/ai/ai.wxss */
/* AI策略页面 - iOS风格深色主题 */

.container {
  min-height: 100vh;
  background: #000000;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

/* ==================== AI 标题栏 ==================== */
.ai-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  margin-bottom: 12rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.header-icon {
  font-size: 28rpx;
}

.header-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.settings-btn {
  width: 48rpx;
  height: 48rpx;
  padding: 0;
  background: #2c2c2e;
  border-radius: 4rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-btn::after {
  border: none;
}

.settings-icon {
  font-size: 24rpx;
}

/* ==================== 策略状态栏 (iOS v0.0.099风格) ==================== */
.strategy-status-bar {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 12rpx;
  background: rgba(0, 122, 255, 0.05);
  border: 1rpx solid rgba(0, 122, 255, 0.2);
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.strategy-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-right: auto;
}

.strategy-emoji {
  font-size: 32rpx;
}

.strategy-info {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  text-align: right;
}

.strategy-label {
  font-size: 16rpx;
  color: #8e8e93;
}

.strategy-name {
  font-size: 22rpx;
  font-weight: 700;
  color: #007aff;
}

.strategy-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.style-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

.style-badge.aggressive {
  background: rgba(255, 149, 0, 0.15);
}

.style-badge.conservative {
  background: rgba(52, 199, 89, 0.15);
}

.style-icon {
  font-size: 16rpx;
}

.style-text {
  font-size: 16rpx;
}

.style-badge.aggressive .style-text {
  color: #ff9500;
}

.style-badge.conservative .style-text {
  color: #34c759;
}

.edit-arrow {
  font-size: 32rpx;
  color: #8e8e93;
  font-weight: 300;
}

/* ==================== 核心参数卡片 (iOS v0.0.099风格) ==================== */
.core-params-card {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 12rpx;
}

.params-title {
  font-size: 18rpx;
  color: #8e8e93;
  margin-bottom: 12rpx;
}

.params-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.param-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  border-radius: 4rpx;
}

.param-item.green {
  background: rgba(52, 199, 89, 0.1);
}

.param-item.red {
  background: rgba(255, 59, 48, 0.1);
}

.param-item.orange {
  background: rgba(255, 149, 0, 0.1);
}

.param-item.purple {
  background: rgba(175, 82, 222, 0.1);
}

.param-icon {
  font-size: 20rpx;
  width: 32rpx;
  text-align: center;
}

.param-item.green .param-icon {
  color: #34c759;
}

.param-item.red .param-icon {
  color: #ff3b30;
}

.param-item.orange .param-icon {
  color: #ff9500;
}

.param-item.purple .param-icon {
  color: #af52de;
}

.param-content {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.param-label {
  font-size: 16rpx;
  color: #8e8e93;
}

.param-value {
  font-size: 22rpx;
  font-weight: 700;
}

.param-item.green .param-value {
  color: #34c759;
}

.param-item.red .param-value {
  color: #ff3b30;
}

.param-item.orange .param-value {
  color: #ff9500;
}

.param-item.purple .param-value {
  color: #af52de;
}

.params-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.row-icon {
  font-size: 20rpx;
  color: #007aff;
}

.row-label {
  font-size: 18rpx;
  color: #8e8e93;
  flex: 1;
}

.row-value {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

/* ==================== 自动交易开关 ==================== */
.auto-trade-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: linear-gradient(135deg, rgba(175, 82, 222, 0.15) 0%, rgba(88, 86, 214, 0.1) 100%);
  border: 1rpx solid rgba(175, 82, 222, 0.3);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.auto-trade-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.auto-icon {
  font-size: 32rpx;
}

.auto-trade-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.auto-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
}

.auto-desc {
  font-size: 20rpx;
  color: #8e8e93;
}

/* 自动交易统计卡片 */
.auto-stats-card {
  background: rgba(28, 28, 30, 0.9);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-item .stat-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

.stat-item.green .stat-value {
  color: #34c759;
}

.stat-item.red .stat-value {
  color: #ff3b30;
}

.stat-item .stat-label {
  font-size: 20rpx;
  color: #8e8e93;
}

/* ==================== 操作按钮 ==================== */
.action-buttons {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

/* 自动刷新状态提示 */
.auto-refresh-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 8rpx 0;
  margin-bottom: 8rpx;
}

.refresh-icon {
  font-size: 18rpx;
  animation: rotate 2s linear infinite;
}

.refresh-text {
  font-size: 14rpx;
  color: #34c759;
  font-weight: 500;
}

.refresh-interval {
  font-size: 12rpx;
  color: #8e8e93;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.pure-mode-tip {
  margin: 16rpx 0 8rpx 0;
  padding: 14rpx 18rpx;
  border-radius: 12rpx;
  background: rgba(255, 149, 0, 0.12);
  border: 1rpx solid rgba(255, 149, 0, 0.3);
}

.pure-mode-text {
  color: #ff9500;
  font-size: 24rpx;
  font-weight: 500;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #af52de;
  color: #ffffff;
}

.action-btn.success {
  background: #34c759;
  color: #ffffff;
}

.action-btn.danger {
  background: #ff3b30;
  color: #ffffff;
}

.action-btn[disabled] {
  opacity: 0.6;
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-size: 22rpx;
}

/* ==================== 内容滚动区 ==================== */
.content-scroll {
  flex: 1;
}

/* ==================== 分析结果 (iOS v0.0.099风格) ==================== */
.analysis-result {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 12rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.analysis-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

.analysis-time {
  font-size: 16rpx;
  color: #8e8e93;
}

/* 双信号显示 (iOS风格) */
.signal-confidence-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.dual-signal-section {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.signal-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.signal-card.contract-only {
  width: 100%;
}

.signal-divider {
  width: 1rpx;
  height: 60rpx;
  background: #38383a;
  margin: 0 12rpx;
}

.signal-label {
  font-size: 18rpx;
  color: #8e8e93;
}

.signal-pill {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  background: rgba(255, 255, 255, 0.06);
  color: #ffffff;
  text-align: center;
}

.signal-pill.green {
  color: #34c759;
  border-color: rgba(52, 199, 89, 0.4);
  background: rgba(52, 199, 89, 0.12);
}

.signal-pill.red {
  color: #ff3b30;
  border-color: rgba(255, 59, 48, 0.4);
  background: rgba(255, 59, 48, 0.12);
}

.signal-pill.yellow {
  color: #ff9500;
  border-color: rgba(255, 149, 0, 0.4);
  background: rgba(255, 149, 0, 0.12);
}

.confidence-card {
  min-width: 180rpx;
  padding: 12rpx 16rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

/* 置信度 */
.confidence-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.confidence-label {
  font-size: 18rpx;
  color: #8e8e93;
}

.confidence-value {
  font-size: 28rpx;
  font-weight: 700;
}

.confidence-value.high {
  color: #34c759;
}

.confidence-value.medium {
  color: #ff9500;
}

.divider {
  height: 1rpx;
  background: #38383a;
  margin: 12rpx 0;
}

/* 价格建议 */
.price-suggestions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.price-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 12rpx;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 0.04);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.price-label {
  font-size: 16rpx;
  color: #8e8e93;
}

.price-value {
  font-size: 22rpx;
  font-family: monospace;
  font-weight: 500;
  text-align: right;
}

.price-value.blue {
  color: #007aff;
}

.price-value.red {
  color: #ff3b30;
}

.price-value.green {
  color: #34c759;
}

/* 分析理由 */
.reasoning-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.reasoning-title {
  font-size: 18rpx;
  font-weight: 500;
  color: #8e8e93;
}

.reasoning-text {
  font-size: 22rpx;
  color: #ffffff;
  line-height: 1.6;
}

/* 风险提示 */
.risks-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.risks-title {
  font-size: 18rpx;
  font-weight: 500;
  color: #ff9500;
}

.risks-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.risk-item {
  display: flex;
  gap: 8rpx;
}

.risk-dot {
  color: #ff9500;
}

.risk-text {
  flex: 1;
  font-size: 22rpx;
  color: #ff9500;
  line-height: 1.5;
}

/* 持仓分析（与Mac端一致） */
.position-analysis-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.position-analysis-title {
  font-size: 18rpx;
  font-weight: 500;
  color: #af52de;
}

.position-analysis-text {
  font-size: 22rpx;
  color: #d0b4e2;
  line-height: 1.6;
  background: rgba(175, 82, 222, 0.1);
  border-radius: 12rpx;
  padding: 16rpx;
  border-left: 4rpx solid #af52de;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 22rpx;
  color: #8e8e93;
}

/* ==================== 持仓区域 ==================== */
.positions-section {
  background: rgba(0, 122, 255, 0.1);
  border-radius: 8rpx;
  padding: 8rpx;
  margin-bottom: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 8rpx 8rpx;
}

.section-title {
  font-size: 18rpx;
  font-weight: 700;
  color: #007aff;
}

.mini-btn {
  width: 32rpx;
  height: 32rpx;
  padding: 0;
  background: transparent;
  border: none;
}

.mini-btn::after {
  border: none;
}

.mini-icon {
  font-size: 24rpx;
  color: #007aff;
}

.position-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.position-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx;
  background: #1c1c1e;
  border-radius: 4rpx;
}

.position-direction {
  width: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.position-direction.long {
  color: #34c759;
}

.position-direction.short {
  color: #ff3b30;
}

.direction-icon {
  font-size: 24rpx;
}

.direction-text {
  font-size: 16rpx;
}

.position-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.position-header {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.position-symbol {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.position-leverage {
  font-size: 16rpx;
  font-weight: 700;
  color: #ff9500;
  padding: 2rpx 6rpx;
  background: rgba(255, 149, 0, 0.15);
  border-radius: 4rpx;
}

.position-details {
  display: flex;
  gap: 12rpx;
}

.position-detail {
  font-size: 16rpx;
  color: #8e8e93;
}

.position-meta {
  margin-top: 4rpx;
}

.position-time {
  font-size: 14rpx;
  color: #8e8e93;
  opacity: 0.8;
}

.position-pnl {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.position-pnl.profit {
  color: #34c759;
}

.position-pnl.loss {
  color: #ff3b30;
}

.pnl-amount {
  font-size: 22rpx;
  font-weight: 600;
  font-family: monospace;
}

.pnl-percent {
  font-size: 16rpx;
  font-family: monospace;
}

.pnl-label {
  font-size: 12rpx;
  opacity: 0.7;
}

/* 空持仓状态 */
.empty-position {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx 0;
}

.empty-position .empty-icon {
  font-size: 28rpx;
  opacity: 0.6;
}

.empty-position .empty-text {
  font-size: 22rpx;
  color: #8e8e93;
}

.empty-position .empty-hint {
  font-size: 18rpx;
  color: #8e8e93;
  opacity: 0.6;
}

/* ==================== 历史记录 ==================== */
.history-section {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.history-title {
  font-size: 18rpx;
  font-weight: 700;
  color: #8e8e93;
}

.history-count {
  font-size: 16rpx;
  color: #8e8e93;
}

.history-stats-bar {
  display: flex;
  gap: 8rpx;
  padding: 8rpx 0;
  margin-bottom: 8rpx;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
  padding: 0 8rpx;
}

.stat-right {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.stat-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.stat-dot.green {
  background: #34c759;
}

.stat-dot.red {
  background: #ff3b30;
}

.stat-dot.yellow {
  background: #ff9500;
}

.stat-text {
  font-size: 16rpx;
  color: #8e8e93;
  white-space: nowrap;
  text-align: right;
}

.stat-num {
  font-size: 20rpx;
  font-weight: 700;
}

.stat-num.green { color: #34c759; }
.stat-num.red { color: #ff3b30; }
.stat-num.yellow { color: #ff9500; }

.history-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx;
  background: rgba(142, 142, 147, 0.05);
  border-radius: 4rpx;
}

.history-time {
  font-size: 18rpx;
  font-family: monospace;
  color: #8e8e93;
  width: 80rpx;
}

.history-symbol {
  font-size: 20rpx;
  font-weight: 600;
  color: #ffffff;
  width: 70rpx;
}

.history-strategy {
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  border-radius: 6rpx;
  background: rgba(142, 142, 147, 0.15);
  color: #c7c7cc;
  font-weight: 600;
  text-align: center;
  min-width: 70rpx;
}

.history-strategy.sar {
  color: #34c759;
  background: rgba(52, 199, 89, 0.15);
}

.history-strategy.sar-macd {
  color: #ff9500;
  background: rgba(255, 149, 0, 0.18);
}

.history-strategy.ema {
  color: #64d2ff;
  background: rgba(100, 210, 255, 0.18);
}

.history-strategy.ai {
  color: #bf5af2;
  background: rgba(191, 90, 242, 0.18);
}

.history-strategy.unknown {
  color: #8e8e93;
  background: rgba(142, 142, 147, 0.15);
}

.history-signal {
  font-size: 20rpx;
  font-weight: 600;
  flex: 1;
  color: #ffffff;
}

.history-signal.green {
  color: #34c759;
  font-weight: 700;
}

.history-signal.red {
  color: #ff3b30;
  font-weight: 700;
}

.history-signal.yellow {
  color: #ff9500;
  font-weight: 700;
}

.history-confidence {
  font-size: 18rpx;
  color: #8e8e93;
  width: 70rpx;
  text-align: right;
  font-weight: 600;
}

/* 置信度颜色 */
.history-confidence.high {
  color: #34c759;
  font-weight: 700;
}

.history-confidence.medium {
  color: #ff9500;
  font-weight: 600;
}

.history-confidence.low {
  color: #8e8e93;
  font-weight: 500;
}

.history-arrow {
  font-size: 24rpx;
  color: #48484a;
}

/* ==================== 策略列表弹窗 ==================== */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-content {
  width: 650rpx;
  max-height: 80vh;
  background: #1c1c1e;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.popup-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.popup-close {
  font-size: 48rpx;
  color: #8e8e93;
  line-height: 1;
}

.strategy-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.strategy-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.strategy-item {
  background: #2c2c2e;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.strategy-item.active {
  border-color: #af52de;
  background: rgba(175, 82, 222, 0.1);
}

.strategy-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.strategy-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.strategy-badge {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
}

.strategy-badge.active {
  background: #af52de;
}

.badge-icon {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
}

.strategy-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.strategy-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.strategy-desc {
  font-size: 24rpx;
  color: #8e8e93;
  line-height: 1.4;
}

.strategy-stats {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.stat-tag {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
}

.stat-tag .stat-label {
  font-size: 22rpx;
  color: #8e8e93;
}

.stat-tag .stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.stat-tag.green {
  background: rgba(52, 199, 89, 0.15);
}

.stat-tag.green .stat-value {
  color: #34c759;
}

.stat-tag.red {
  background: rgba(255, 59, 48, 0.15);
}

.stat-tag.red .stat-value {
  color: #ff3b30;
}

.edit-btn {
  width: 100%;
  height: 72rpx;
  background: rgba(175, 82, 222, 0.1);
  border: 2rpx solid #af52de;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #af52de;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn::active {
  background: rgba(175, 82, 222, 0.2);
}

.popup-footer {
  padding: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.footer-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-btn.primary {
  background: #af52de;
  color: #ffffff;
}

.footer-btn.secondary {
  background: rgba(255, 255, 255, 0.05);
  color: #ffffff;
}

/* 创建新策略按钮 */
.create-strategy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  margin: 24rpx;
  background: rgba(52, 199, 89, 0.1);
  border: 2rpx dashed #34c759;
  border-radius: 16rpx;
}

.create-icon {
  font-size: 48rpx;
  color: #34c759;
  font-weight: 300;
}

.create-text {
  font-size: 28rpx;
  color: #34c759;
  font-weight: 500;
}

/* 策略操作按钮 */
.strategy-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.action-btn.edit {
  background: rgba(175, 82, 222, 0.1);
  color: #af52de;
}

.action-btn.edit::active {
  background: rgba(175, 82, 222, 0.2);
}

.action-btn.delete {
  background: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.action-btn.delete::active {
  background: rgba(255, 59, 48, 0.2);
}

.action-btn.toggle {
  background: rgba(142, 142, 147, 0.1);
  color: #8e8e93;
}

.action-btn.toggle.active {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.action-btn.toggle::active {
  background: rgba(142, 142, 147, 0.2);
}

.action-btn.toggle.active::active {
  background: rgba(52, 199, 89, 0.2);
}

/* ==================== 分页控件 ==================== */
.pagination-container {
  margin-top: 24rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16rpx;
}

.pagination-info {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.page-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.total-text {
  font-size: 24rpx;
  color: #8e8e93;
}

.pagination-controls {
  display: flex;
  gap: 16rpx;
}

.page-btn {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: rgba(0, 122, 255, 0.1);
  border: 1rpx solid rgba(0, 122, 255, 0.3);
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #007aff;
  transition: all 0.2s;
}

.page-btn::after {
  border: none;
}

.page-btn:active {
  background: rgba(0, 122, 255, 0.2);
  transform: scale(0.98);
}

.page-btn.disabled {
  opacity: 0.3;
  background: rgba(142, 142, 147, 0.1);
  border-color: rgba(142, 142, 147, 0.2);
  color: #8e8e93;
}

.page-btn.disabled:active {
  transform: none;
}

.btn-icon {
  font-size: 32rpx;
  line-height: 1;
}

.btn-text {
  font-size: 26rpx;
  line-height: 1;
}
