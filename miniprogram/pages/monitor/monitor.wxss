/* pages/monitor/monitor.wxss */
.container {
  min-height: 100vh;
  padding: 24rpx;
  background: #1a1a1a;
  color: #e0e0e0;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.time {
  font-size: 28rpx;
  color: #9e9e9e;
}

.account-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.account-badge.simulation {
  background: rgba(102, 126, 234, 0.2);
  color: #667eea;
}

.account-badge.real {
  background: rgba(0, 200, 83, 0.2);
  color: #00c853;
}

/* 卡片 */
.card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
}

.card-extra {
  font-size: 24rpx;
  color: #9e9e9e;
}

.card-body {
  font-size: 28rpx;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #9e9e9e;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
}

/* 配置 */
.config-section {
  margin-top: 24rpx;
}

.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.config-item:last-child {
  border-bottom: none;
}

.config-label {
  font-size: 28rpx;
  color: #9e9e9e;
}

.config-value {
  font-size: 28rpx;
  color: #e0e0e0;
  font-weight: bold;
}

/* 最新分析 */
.latest-analysis {
  padding: 24rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8rpx;
  margin-bottom: 24rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.analysis-symbol {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
}

.analysis-signal {
  font-size: 32rpx;
  font-weight: bold;
}

.analysis-confidence {
  font-size: 24rpx;
  color: #9e9e9e;
}

.analysis-content {
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.analysis-reasoning {
  font-size: 26rpx;
  color: #9e9e9e;
  line-height: 1.6;
}

/* 分析历史 */
.analysis-history {
  margin-top: 24rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #e0e0e0;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.history-time {
  font-size: 24rpx;
  color: #9e9e9e;
  flex: 1;
}

.history-signal {
  font-size: 28rpx;
  font-weight: bold;
  margin: 0 16rpx;
}

.history-confidence {
  font-size: 28rpx;
  color: #e0e0e0;
  font-weight: bold;
}

/* 持仓列表 */
.position-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.position-item {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.position-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.position-symbol {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
}

.position-side {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.position-side.long {
  background: rgba(0, 200, 83, 0.2);
  color: #00c853;
}

.position-side.short {
  background: rgba(255, 82, 82, 0.2);
  color: #ff5252;
}

.position-details {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.position-detail {
  flex: 1;
  min-width: 150rpx;
}

.detail-label {
  display: block;
  font-size: 24rpx;
  color: #9e9e9e;
  margin-bottom: 4rpx;
}

.detail-value {
  display: block;
  font-size: 28rpx;
  color: #e0e0e0;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9e9e9e;
}

/* 余额显示 */
.balance-display {
  text-align: center;
  padding: 40rpx 0;
}

.balance-label {
  display: block;
  font-size: 28rpx;
  color: #9e9e9e;
  margin-bottom: 16rpx;
}

.balance-value {
  display: block;
  font-size: 48rpx;
  color: #e0e0e0;
  font-weight: bold;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  background: #667eea;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.action-btn:active {
  background: #5568d3;
}

/* 导航 */
.navigation {
  display: flex;
  gap: 24rpx;
}

.nav-btn {
  flex: 1;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.15);
}

/* 文字颜色 */
.text-success {
  color: #00c853;
}

.text-danger {
  color: #ff5252;
}
