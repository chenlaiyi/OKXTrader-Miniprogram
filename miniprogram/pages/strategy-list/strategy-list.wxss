/* pages/strategy-list/strategy-list.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1c1c1e 0%, #000000 100%);
  padding: 24rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #8e8e93;
}

.content {
  height: calc(100vh - 140rpx);
}

.create-strategy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: rgba(175, 82, 222, 0.2);
  border: 1rpx solid rgba(175, 82, 222, 0.4);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.create-icon {
  font-size: 32rpx;
  color: #af52de;
}

.create-text {
  font-size: 28rpx;
  color: #af52de;
  font-weight: 500;
}

.loading-row,
.empty-state {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text,
.empty-text {
  font-size: 26rpx;
  color: #8e8e93;
}

.empty-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
}

.strategy-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.strategy-item {
  background: rgba(28, 28, 30, 0.9);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.strategy-item.active {
  position: relative;
  border-color: rgba(175, 82, 222, 0.6);
  box-shadow: 0 12rpx 24rpx rgba(175, 82, 222, 0.12);
  animation: activeBorderPulse 2.4s ease-in-out infinite;
}

.strategy-item.active::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 20rpx;
  border: 2rpx solid rgba(175, 82, 222, 0.35);
  opacity: 0;
  pointer-events: none;
  animation: activeRingPulse 2.4s ease-in-out infinite;
}

@keyframes activeBorderPulse {
  0% {
    border-color: rgba(175, 82, 222, 0.45);
    box-shadow: 0 12rpx 24rpx rgba(175, 82, 222, 0.12);
  }
  50% {
    border-color: rgba(175, 82, 222, 0.9);
    box-shadow: 0 16rpx 32rpx rgba(175, 82, 222, 0.28);
  }
  100% {
    border-color: rgba(175, 82, 222, 0.45);
    box-shadow: 0 12rpx 24rpx rgba(175, 82, 222, 0.12);
  }
}

@keyframes activeRingPulse {
  0% {
    opacity: 0;
    transform: scale(1);
  }
  50% {
    opacity: 0.6;
    transform: scale(1.02);
  }
  100% {
    opacity: 0;
    transform: scale(1.05);
  }
}

.strategy-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
}

.strategy-left {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
  flex: 1;
}

.strategy-badge {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.strategy-badge.active {
  border-color: #34c759;
  background: rgba(52, 199, 89, 0.2);
}

.badge-icon {
  font-size: 22rpx;
  color: #ffffff;
}

.strategy-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.strategy-title-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.strategy-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
}

.strategy-type-tag {
  font-size: 20rpx;
  color: #af52de;
  border: 1rpx solid rgba(175, 82, 222, 0.5);
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  background: rgba(175, 82, 222, 0.12);
}

.strategy-desc {
  font-size: 24rpx;
  color: #8e8e93;
}

.strategy-stats {
  display: flex;
  gap: 8rpx;
}

.stat-tag {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  text-align: center;
}

.stat-tag.green {
  background: rgba(52, 199, 89, 0.2);
}

.stat-tag.red {
  background: rgba(255, 59, 48, 0.2);
}

.stat-label {
  display: block;
  font-size: 20rpx;
  color: #8e8e93;
}

.stat-value {
  font-size: 24rpx;
  color: #ffffff;
}

.strategy-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-sizing: border-box;
  text-align: center;
}

.action-btn.edit {
  background: rgba(255, 255, 255, 0.08);
  color: #ffffff;
}

.action-btn.delete {
  background: rgba(255, 59, 48, 0.15);
  color: #ff3b30;
}

.action-btn.toggle {
  background: rgba(175, 82, 222, 0.2);
  color: #af52de;
}

.action-btn.toggle.active {
  background: rgba(52, 199, 89, 0.2);
  color: #34c759;
}
