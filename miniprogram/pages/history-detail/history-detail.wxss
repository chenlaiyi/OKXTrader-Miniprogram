/* pages/history-detail/history-detail.wxss */
.container {
  min-height: 100vh;
  background: #000000;
  padding-bottom: 32rpx;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.05);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.nav-icon {
  font-size: 36rpx;
  color: #007aff;
  font-weight: 300;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 12rpx 24rpx;
}

/* 滚动内容 */
.content-scroll {
  padding: 16rpx;
}

/* 卡片通用样式 */
.signal-card,
.price-card,
.reasoning-card,
.position-card {
  background: #1c1c1e;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* 卡片标题 */
.card-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 信号卡片 */
.signal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.signal-label {
  font-size: 24rpx;
  color: #8e8e93;
}

.signal-badge {
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.signal-badge.green {
  background: rgba(52, 199, 89, 0.15);
}

.signal-badge.red {
  background: rgba(255, 59, 48, 0.15);
}

.signal-badge.yellow {
  background: rgba(255, 149, 0, 0.15);
}

.signal-badge-text {
  font-size: 28rpx;
}

.signal-badge.green .signal-badge-text {
  color: #34c759;
}

.signal-badge.red .signal-badge-text {
  color: #ff3b30;
}

.signal-badge.yellow .signal-badge-text {
  color: #ff9500;
}

.signal-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #8e8e93;
}

.info-value {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
  text-align: right;
}

.info-value.blue {
  color: #1890ff;
}

.info-value.green {
  color: #34c759;
}

.info-value.red {
  color: #ff3b30;
}

/* 价格建议 */
.price-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8rpx;
}

.price-label {
  font-size: 24rpx;
  color: #8e8e93;
}

.price-value {
  font-size: 28rpx;
  font-weight: 600;
  font-family: monospace;
}

.price-value.blue {
  color: #1890ff;
}

.price-value.green {
  color: #34c759;
}

.price-value.red {
  color: #ff3b30;
}

/* 内容卡片 */
.card-content {
  max-height: 800rpx;
  overflow-y: auto;
}

.content-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #ffffff;
  white-space: pre-wrap;
  word-break: break-all;
}
