/* pages/account/account.wxss */
/* 账户页面 - iOS风格深色主题 */

.container {
  height: 100%;
  background: #000000;
  padding: 16rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* ==================== 内容滚动区 ==================== */
.content-scroll {
  flex: 1;
}

/* ==================== 账号选择卡片 ==================== */
.account-select-card {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 12rpx;
}

.card-header {
  margin-bottom: 8rpx;
}

.card-title {
  font-size: 18rpx;
  color: #8e8e93;
}

.account-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.picker-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.account-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.account-badge {
  font-size: 16rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.account-badge.simulation {
  background: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

.account-badge.real {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.picker-arrow {
  font-size: 32rpx;
  color: #48484a;
}

/* ==================== 账户信息卡片 ==================== */
.info-card {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 12rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.info-row.highlight {
  padding-top: 12rpx;
}

.info-divider {
  height: 1rpx;
  background: #38383a;
}

.info-label {
  font-size: 22rpx;
  color: #8e8e93;
}

.info-value {
  font-size: 22rpx;
  color: #8e8e93;
  font-family: monospace;
}

.info-value.large {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* ==================== 分区卡片 ==================== */
.section-card {
  background: #1c1c1e;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-bottom: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

.refresh-mini-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 0;
  background: #2c2c2e;
  border-radius: 4rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-mini-btn::after {
  border: none;
}

.refresh-icon {
  font-size: 24rpx;
  color: #007aff;
}

.view-more-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 0;
  background: transparent;
  border: none;
}

.view-more-btn::after {
  border: none;
}

.view-more-text {
  font-size: 18rpx;
  color: #007aff;
}

.view-more-arrow {
  font-size: 24rpx;
  color: #007aff;
}

.empty-row {
  padding: 16rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 22rpx;
  color: #8e8e93;
}

/* ==================== 资产列表 ==================== */
.balance-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.balance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx;
  background: #2c2c2e;
  border-radius: 4rpx;
}

.balance-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.currency-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.currency-letter {
  font-size: 22rpx;
  font-weight: 700;
  color: #007aff;
}

.currency-name {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.balance-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.balance-amount {
  font-size: 22rpx;
  font-family: monospace;
  color: #ffffff;
}

.balance-usd {
  font-size: 16rpx;
  color: #8e8e93;
}

/* ==================== 持仓列表 ==================== */
.position-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.position-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx;
  background: #2c2c2e;
  border-radius: 4rpx;
}

.position-main {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.position-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.position-symbol {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.position-tags {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.direction-tag {
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.direction-tag.long {
  background: rgba(52, 199, 89, 0.1);
}

.direction-tag.short {
  background: rgba(255, 59, 48, 0.1);
}

.tag-text {
  font-size: 16rpx;
  font-weight: 500;
}

.direction-tag.long .tag-text {
  color: #34c759;
}

.direction-tag.short .tag-text {
  color: #ff3b30;
}

.leverage-text {
  font-size: 16rpx;
  color: #8e8e93;
}

.position-details {
  display: flex;
  gap: 12rpx;
}

.detail-text {
  font-size: 16rpx;
  color: #8e8e93;
}

.position-pnl {
  display: flex;
  align-items: center;
}

.position-pnl.profit {
  color: #34c759;
}

.position-pnl.loss {
  color: #ff3b30;
}

.pnl-value {
  font-size: 24rpx;
  font-weight: 700;
  font-family: monospace;
}

/* ==================== 交易列表 ==================== */
.trade-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.trade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx;
  background: #2c2c2e;
  border-radius: 4rpx;
}

.trade-main {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.trade-header {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.trade-symbol {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.trade-tag {
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.trade-tag.long,
.trade-tag.buy {
  background: rgba(52, 199, 89, 0.1);
}

.trade-tag.short,
.trade-tag.sell {
  background: rgba(255, 59, 48, 0.1);
}

.trade-tag.close-long {
  background: rgba(255, 149, 0, 0.1);
}

.trade-tag.close-short {
  background: rgba(0, 122, 255, 0.1);
}

.trade-tag-text {
  font-size: 16rpx;
}

.trade-tag.long .trade-tag-text,
.trade-tag.buy .trade-tag-text {
  color: #34c759;
}

.trade-tag.short .trade-tag-text,
.trade-tag.sell .trade-tag-text {
  color: #ff3b30;
}

.trade-tag.close-long .trade-tag-text {
  color: #ff9500;
}

.trade-tag.close-short .trade-tag-text {
  color: #007aff;
}

.trade-time {
  font-size: 16rpx;
  color: #8e8e93;
}

.trade-pnl.profit {
  color: #34c759;
}

.trade-pnl.loss {
  color: #ff3b30;
}

.pnl-text {
  font-size: 22rpx;
  font-weight: 600;
  font-family: monospace;
}

.trade-size {
  font-size: 18rpx;
  font-family: monospace;
  color: #ffffff;
}

/* ==================== 功能入口 ==================== */
.features-grid {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.feature-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #1c1c1e;
  border-radius: 8rpx;
  border: none;
}

.feature-btn::after {
  border: none;
}

.feature-btn:active {
  background: #2c2c2e;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-text {
  font-size: 22rpx;
  color: #ffffff;
}

/* ==================== 刷新按钮 ==================== */
.refresh-section {
  padding: 12rpx 0;
}

.refresh-all-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 100%;
  padding: 12rpx;
  background: #007aff;
  border-radius: 8rpx;
  border: none;
}

.refresh-all-btn::after {
  border: none;
}

.btn-icon {
  font-size: 24rpx;
  color: white;
}

.btn-text {
  font-size: 22rpx;
  color: white;
}

/* ==================== 模态框 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: #1c1c1e;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #2c2c2e;
}

.modal-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.modal-close {
  font-size: 28rpx;
  color: #8e8e93;
  padding: 8rpx;
}

.modal-body {
  padding: 12rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 12rpx;
}

.form-label {
  display: block;
  font-size: 18rpx;
  color: #8e8e93;
  margin-bottom: 8rpx;
}

.form-input {
  width: 100%;
  padding: 8rpx;
  background: #2c2c2e;
  border-radius: 4rpx;
  font-size: 22rpx;
  color: #ffffff;
}

.form-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-row-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.form-hint {
  font-size: 16rpx;
  color: #48484a;
}

.form-group {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #38383a;
}

.form-group-title {
  display: block;
  font-size: 18rpx;
  font-weight: 600;
  color: #8e8e93;
  margin-bottom: 12rpx;
}

.modal-footer {
  display: flex;
  gap: 8rpx;
  padding: 12rpx;
  background: #2c2c2e;
}

.modal-btn {
  flex: 1;
  padding: 8rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background: #1c1c1e;
  color: #8e8e93;
}

.modal-btn.confirm {
  background: #007aff;
  color: white;
}
