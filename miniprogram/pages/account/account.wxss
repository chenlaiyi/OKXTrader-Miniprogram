/* pages/account/account.wxss */
/* 账户页面 - 升级版深色主题 */

.container {
  min-height: 100vh;
  background: #0b0d0f;
  padding: 20rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-sizing: border-box;
}

/* ==================== 顶部账户卡片 ==================== */
.account-hero {
  background: radial-gradient(140% 120% at 20% 0%, #1b2430 0%, #101827 55%, #0b2e24 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 16rpx 30rpx rgba(0, 0, 0, 0.45);
}

.hero-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.hero-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.nickname {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
}

.account-line {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.account-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #e5e7eb;
}

.meta-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  font-family: monospace;
}

.icon-btn {
  padding: 12rpx 18rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.16);
  color: #e5e7eb;
  font-size: 22rpx;
}

.icon-btn::after {
  border: none;
}

.icon-btn-text {
  font-size: 22rpx;
  color: #e5e7eb;
}

.equity-block {
  margin-top: 18rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: rgba(15, 23, 42, 0.7);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}

.equity-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.equity-row {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 8rpx;
}

.equity-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  font-family: monospace;
}

.equity-unit {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

.stats-row {
  margin-top: 16rpx;
  display: flex;
  gap: 10rpx;
}

.stat-item {
  flex: 1;
  padding: 12rpx;
  border-radius: 14rpx;
  background: rgba(10, 14, 18, 0.7);
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.stat-label {
  font-size: 18rpx;
  color: #8b929a;
}

.stat-value {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 600;
  font-family: monospace;
}

.hero-actions {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.primary-btn,
.ghost-btn {
  flex: 1 1 30%;
  padding: 16rpx 0;
  border-radius: 14rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.primary-btn {
  background: linear-gradient(135deg, #16a34a 0%, #0ea5e9 100%);
  color: #0b0d0f;
  border: none;
}

.primary-btn::after,
.ghost-btn::after {
  border: none;
}

.ghost-btn {
  background: rgba(255, 255, 255, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  color: #e5e7eb;
}

.logout-btn {
  color: #f87171;
  border-color: rgba(248, 113, 113, 0.35);
}

/* ==================== 未登录提示 ==================== */
.login-prompt {
  background: #14171b;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.prompt-icon {
  font-size: 80rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.prompt-desc {
  font-size: 28rpx;
  color: #8e8e93;
}

.login-btn {
  margin-top: 20rpx;
  padding: 24rpx 60rpx;
  background: linear-gradient(135deg, #16a34a 0%, #0ea5e9 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(14, 165, 233, 0.3);
}

.login-btn::after {
  border: none;
}

/* ==================== 内容滚动区 ==================== */
.content-scroll {
  flex: 1;
}

/* ==================== 分区卡片 ==================== */
.section-card {
  background: #13161b;
  border-radius: 16rpx;
  padding: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  margin-bottom: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #e5e7eb;
}

.refresh-mini-btn {
  width: 42rpx;
  height: 42rpx;
  padding: 0;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 10rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-mini-btn::after {
  border: none;
}

.refresh-icon {
  font-size: 24rpx;
  color: #38bdf8;
}

.empty-row {
  padding: 16rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 22rpx;
  color: #8b929a;
}

/* ==================== 资产列表 ==================== */
.balance-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.balance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #0f1419;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.balance-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.currency-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(56, 189, 248, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}

.currency-letter {
  font-size: 22rpx;
  font-weight: 700;
  color: #38bdf8;
}

.currency-name {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.balance-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 2rpx;
}

.balance-amount {
  font-size: 22rpx;
  font-family: monospace;
  color: #ffffff;
}

.balance-usd {
  font-size: 16rpx;
  color: #8b929a;
}

/* ==================== 持仓列表 ==================== */
.position-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.position-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #0f1419;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.position-main {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.position-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.position-symbol {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.position-tags {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.direction-tag {
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
}

.direction-tag.long {
  background: rgba(16, 185, 129, 0.16);
}

.direction-tag.short {
  background: rgba(248, 113, 113, 0.16);
}

.tag-text {
  font-size: 16rpx;
  font-weight: 500;
}

.direction-tag.long .tag-text {
  color: #10b981;
}

.direction-tag.short .tag-text {
  color: #f87171;
}

.leverage-text {
  font-size: 16rpx;
  color: #8b929a;
}

.position-details {
  display: flex;
  gap: 12rpx;
}

.detail-text {
  font-size: 16rpx;
  color: #8b929a;
}

.position-pnl {
  display: flex;
  align-items: center;
}

.position-pnl.profit {
  color: #10b981;
}

.position-pnl.loss {
  color: #f87171;
}

.pnl-value {
  font-size: 24rpx;
  font-weight: 700;
  font-family: monospace;
}

/* ==================== 交易列表 ==================== */
.trade-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.trade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #0f1419;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.trade-main {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.trade-header {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.trade-symbol {
  font-size: 22rpx;
  font-weight: 500;
  color: #ffffff;
}

.trade-tag {
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.trade-tag.long,
.trade-tag.buy {
  background: rgba(16, 185, 129, 0.16);
}

.trade-tag.short,
.trade-tag.sell {
  background: rgba(248, 113, 113, 0.16);
}

.trade-tag.close-long {
  background: rgba(245, 158, 11, 0.16);
}

.trade-tag.close-short {
  background: rgba(56, 189, 248, 0.16);
}

.trade-tag-text {
  font-size: 16rpx;
}

.trade-tag.long .trade-tag-text,
.trade-tag.buy .trade-tag-text {
  color: #10b981;
}

.trade-tag.short .trade-tag-text,
.trade-tag.sell .trade-tag-text {
  color: #f87171;
}

.trade-tag.close-long .trade-tag-text {
  color: #f59e0b;
}

.trade-tag.close-short .trade-tag-text {
  color: #38bdf8;
}

.trade-time {
  font-size: 16rpx;
  color: #8b929a;
}

.trade-pnl.profit {
  color: #10b981;
}

.trade-pnl.loss {
  color: #f87171;
}

.pnl-text {
  font-size: 22rpx;
  font-weight: 600;
  font-family: monospace;
}

.trade-size {
  font-size: 18rpx;
  font-family: monospace;
  color: #ffffff;
}

/* ==================== 功能入口 ==================== */
.features-grid {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.feature-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 18rpx 0;
  background: #12161b;
  border-radius: 14rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  color: #e5e7eb;
}

.feature-btn::after {
  border: none;
}

.feature-icon {
  font-size: 32rpx;
}

.feature-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #e5e7eb;
}

/* ==================== 刷新按钮 ==================== */
.refresh-section {
  padding: 8rpx 0 0 0;
}

.refresh-all-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 100%;
  padding: 16rpx 0;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.12);
}

.refresh-all-btn::after {
  border: none;
}

.btn-icon {
  font-size: 24rpx;
  color: #e5e7eb;
}

.btn-text {
  font-size: 22rpx;
  color: #e5e7eb;
}
