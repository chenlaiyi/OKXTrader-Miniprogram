/* pages/account/account.wxss */
.container {
  min-height: 100vh;
  padding: 24rpx;
  background: #1a1a1a;
}

/* 统计卡片 */
.stats-card {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #e0e0e0;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #9e9e9e;
}

/* 账号列表 */
.account-list {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
  margin-bottom: 24rpx;
}

.account-item {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.account-item.active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.account-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.account-info {
  flex: 1;
}

.account-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.account-id {
  font-size: 24rpx;
  color: #9e9e9e;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  margin-left: 8rpx;
}

.badge.default {
  background: #667eea;
  color: #fff;
}

.account-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #9e9e9e;
}

.status-dot.active {
  background: #00c853;
  box-shadow: 0 0 8rpx rgba(0, 200, 83, 0.5);
}

.status-text {
  font-size: 24rpx;
  color: #9e9e9e;
}

/* 账号详情 */
.account-details {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 16rpx 0;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 16rpx;
}

.detail-item {
  text-align: center;
}

.detail-label {
  display: block;
  font-size: 24rpx;
  color: #9e9e9e;
  margin-bottom: 4rpx;
}

.detail-value {
  display: block;
  font-size: 26rpx;
  color: #e0e0e0;
  font-weight: bold;
}

.detail-value.valid {
  color: #00c853;
}

.detail-value.invalid {
  color: #ff5252;
}

.detail-value.simulation {
  color: #667eea;
}

.detail-value.real {
  color: #ffa726;
}

/* 账号操作 */
.account-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #e0e0e0;
  font-size: 24rpx;
  border-radius: 4rpx;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.15);
}

.action-btn.danger {
  background: rgba(255, 82, 82, 0.2);
  color: #ff5252;
}

.action-btn.danger:active {
  background: rgba(255, 82, 82, 0.3);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #9e9e9e;
}

/* 添加按钮 */
.add-button {
  margin-bottom: 32rpx;
}

.btn-primary {
  width: 100%;
  padding: 28rpx;
  background: #667eea;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-primary:active {
  background: #5568d3;
}

/* 功能入口 */
.features {
  display: flex;
  gap: 16rpx;
}

.feature-btn {
  flex: 1;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.feature-icon {
  font-size: 48rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #e0e0e0;
}

.feature-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

/* 模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-content {
  width: 640rpx;
  max-height: 80vh;
  background: #2a2a2a;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #e0e0e0;
}

.modal-close {
  font-size: 32rpx;
  color: #9e9e9e;
  padding: 8rpx;
}

.modal-body {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.form-group-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #e0e0e0;
  margin-bottom: 16rpx;
  margin-top: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #e0e0e0;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #e0e0e0;
}

.form-input:focus {
  border-color: #667eea;
}

.form-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-row-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #9e9e9e;
}

.form-group {
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-btn.cancel {
  background: rgba(255, 255, 255, 0.1);
  color: #e0e0e0;
}

.modal-btn.cancel:active {
  background: rgba(255, 255, 255, 0.15);
}

.modal-btn.confirm {
  background: #667eea;
  color: #fff;
}

.modal-btn.confirm:active {
  background: #5568d3;
}
