/* pages/test-simple/test-simple.wxss */
.container {
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

.result-box {
  background-color: #f5f5f5;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
  min-height: 200rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.result {
  display: block;
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
}
