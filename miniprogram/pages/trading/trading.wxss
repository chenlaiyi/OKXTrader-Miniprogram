/* pages/trading/trading.wxss */
/* 交易页面 - iOS风格深色主题 */

.container {
  min-height: 100vh;
  background: #000000;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

/* ==================== 盈亏统计卡片 (iOS风格) ==================== */
.pnl-stats-card {
  background: #1c1c1e;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
}

/* 今日/昨日 主要数据行 */
.pnl-main-row {
  display: flex;
  align-items: stretch;
}

.pnl-main-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
}

.pnl-main-divider {
  width: 1rpx;
  background: #38383a;
  margin: 0 8rpx;
}

.main-label-row {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.main-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
}

.main-count {
  font-size: 20rpx;
  color: #8e8e93;
}

.main-value {
  font-size: 48rpx;
  font-weight: 700;
  font-family: monospace;
}

.main-value.green {
  color: #34c759;
}

.main-value.red {
  color: #ff3b30;
}

.pnl-divider {
  height: 1rpx;
  background: #38383a;
  margin: 12rpx 0;
}

/* 总计/本周 次要数据行 */
.pnl-secondary-row {
  display: flex;
  justify-content: space-around;
  padding: 8rpx 0;
}

.pnl-secondary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.secondary-label {
  font-size: 20rpx;
  color: #8e8e93;
}

.secondary-value {
  font-size: 28rpx;
  font-weight: 600;
  font-family: monospace;
}

.secondary-value.green {
  color: #34c759;
}

.secondary-value.red {
  color: #ff3b30;
}

/* ==================== Tab切换 (iOS风格分段选择器) ==================== */
.tab-switcher {
  display: flex;
  background: #2c2c2e;
  border-radius: 8rpx;
  padding: 4rpx;
  margin-bottom: 12rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  border-radius: 4rpx;
  transition: all 0.2s;
}

.tab-item.active {
  background: #1c1c1e;
}

.tab-text {
  font-size: 22rpx;
  font-weight: 500;
  color: #8e8e93;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

/* 自动刷新状态提示 */
.auto-refresh-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  padding: 8rpx 0;
  margin-bottom: 8rpx;
}

.refresh-icon {
  font-size: 18rpx;
  animation: rotate 2s linear infinite;
}

.refresh-text {
  font-size: 14rpx;
  color: #34c759;
  font-weight: 500;
}

.refresh-interval {
  font-size: 12rpx;
  color: #8e8e93;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ==================== 内容滚动区 ==================== */
.content-scroll {
  flex: 1;
  margin-bottom: 72rpx;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 22rpx;
  color: #8e8e93;
}

/* ==================== 成交记录列表 ==================== */
.trade-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.trade-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #1c1c1e;
  border-radius: 8rpx;
}

.trade-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.trade-header {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.trade-symbol {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.trade-tag {
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.trade-tag.long,
.trade-tag.buy,
.trade-tag.open-long {
  background: rgba(52, 199, 89, 0.1);
}

.trade-tag.short,
.trade-tag.sell,
.trade-tag.open-short {
  background: rgba(255, 59, 48, 0.1);
}

.trade-tag.close-long {
  background: rgba(255, 149, 0, 0.1);
}

.trade-tag.close-short {
  background: rgba(0, 122, 255, 0.15);
}

.tag-text {
  font-size: 22rpx;
}

.trade-tag.long .tag-text,
.trade-tag.buy .tag-text,
.trade-tag.open-long .tag-text {
  color: #34c759;
}

.trade-tag.short .tag-text,
.trade-tag.sell .tag-text,
.trade-tag.open-short .tag-text {
  color: #ff3b30;
}

.trade-tag.close-long .tag-text {
  color: #ff9500;
}

.trade-tag.close-short .tag-text {
  color: #007aff;
}

.trade-source-tag {
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
}

.trade-source-tag.api {
  background: rgba(0, 122, 255, 0.1);
}

.trade-source-tag.ai {
  background: rgba(175, 82, 222, 0.15);
}

.trade-source-tag.manual {
  background: rgba(142, 142, 147, 0.1);
}

.source-text {
  font-size: 22rpx;
}

.trade-source-tag.api .source-text {
  color: #007aff;
}

.trade-source-tag.ai .source-text {
  color: #af52de;
}

.trade-source-tag.manual .source-text {
  color: #8e8e93;
}

.trade-leverage {
  font-size: 22rpx;
  color: #ff9500;
}

.trade-info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.trade-time {
  font-size: 22rpx;
  color: #8e8e93;
}

.trade-price {
  font-size: 22rpx;
  color: #ffffff;
  font-family: monospace;
}

.trade-reason {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #ffd60a;
}

.trade-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 6rpx;
}

.trade-pnl {
  font-size: 28rpx;
  font-weight: 600;
  font-family: monospace;
}

.trade-pnl.profit {
  color: #34c759;
}

.trade-pnl.loss {
  color: #ff3b30;
}

.trade-size {
  font-size: 24rpx;
  font-family: monospace;
  color: #ffffff;
}

.trade-fee {
  font-size: 20rpx;
  color: #8e8e93;
}

/* ==================== 持仓列表 ==================== */
.position-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.position-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx;
  background: #1c1c1e;
  border-radius: 8rpx;
}

.position-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.position-header {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.position-symbol {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

.position-direction {
  padding: 2rpx 12rpx;
  border-radius: 4rpx;
}

.position-direction.long {
  background: rgba(52, 199, 89, 0.1);
}

.position-direction.short {
  background: rgba(255, 59, 48, 0.1);
}

.direction-text {
  font-size: 16rpx;
  font-weight: 500;
}

.position-direction.long .direction-text {
  color: #34c759;
}

.position-direction.short .direction-text {
  color: #ff3b30;
}

.position-leverage {
  font-size: 16rpx;
  color: #8e8e93;
}

.position-details {
  display: flex;
  gap: 12rpx;
}

.position-detail {
  font-size: 16rpx;
  color: #8e8e93;
}

.position-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.pnl-label {
  font-size: 18rpx;
  color: #8e8e93;
  margin-bottom: 2rpx;
}

.position-pnl {
  font-size: 24rpx;
  font-weight: 700;
  font-family: monospace;
}

.position-pnl.profit {
  color: #34c759;
}

.position-pnl.loss {
  color: #ff3b30;
}

.pnl-ratio-badge {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 2rpx;
}

.pnl-ratio-badge.profit-bg {
  background: #34c759;
}

.pnl-ratio-badge.loss-bg {
  background: #ff3b30;
}

.pnl-ratio-text {
  font-size: 18rpx;
  font-weight: 600;
  color: #ffffff;
}

/* ==================== 刷新按钮 ==================== */
.refresh-footer {
  padding: 8rpx 0;
}

.refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  width: 100%;
  padding: 12rpx;
  background: #1c1c1e;
  border-radius: 8rpx;
  border: none;
}

.refresh-btn::after {
  border: none;
}

.refresh-btn:active {
  background: #2c2c2e;
}

.refresh-icon {
  font-size: 24rpx;
  color: #007aff;
}

.refresh-text {
  font-size: 22rpx;
  color: #007aff;
}
