/* 登录页面样式 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 100rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  background: white;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 登录区域 */
.login-section {
  width: 100%;
}

.login-card {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 用户表单 */
.user-form {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 头像选择按钮 */
.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  width: 200rpx;
  margin: 0 auto;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: none;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #e9ecef;
}

.avatar-hint {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 输入框样式 */
.input-group {
  width: 100%;
}

.nickname-input {
  width: 100%;
  padding: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #dee2e6;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #1d1d1f;
}

.nickname-input:focus {
  border-color: #667eea;
}

/* 欢迎文本 */
.welcome-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.welcome-text .title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1d1d1f;
  margin-bottom: 10rpx;
}

.welcome-text .subtitle {
  font-size: 28rpx;
  color: #8e8e93;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  border: none;
  margin-bottom: 30rpx;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
}

/* 提示 */
.tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f5f5f7;
  border-radius: 12rpx;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #1d1d1f;
  margin-bottom: 40rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #8e8e93;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  background: #f5f5f7;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #8e8e93;
  border: none;
}

/* 功能介绍 */
.features {
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.feature-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
