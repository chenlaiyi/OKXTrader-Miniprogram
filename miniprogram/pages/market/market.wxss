/* pages/market/market.wxss */
/* 行情页面 - 科技感深色主题 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0a0a0f 100%);
  padding: 16rpx;
  padding-bottom: 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;
}

/* ==================== 科技感刷新动画 ==================== */
.tech-refresh-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.tech-refresh-overlay.active {
  opacity: 1;
  visibility: visible;
}

.tech-spinner {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.tech-ring {
  position: absolute;
  border-radius: 50%;
  border: 3rpx solid transparent;
}

.tech-ring.outer {
  width: 100%;
  height: 100%;
  border-top-color: #007aff;
  border-right-color: #007aff;
  animation: tech-spin-outer 1.5s linear infinite;
  box-shadow: 0 0 20rpx rgba(0, 122, 255, 0.5);
}

.tech-ring.middle {
  width: 70%;
  height: 70%;
  top: 15%;
  left: 15%;
  border-bottom-color: #5ac8fa;
  border-left-color: #5ac8fa;
  animation: tech-spin-middle 1.2s linear infinite reverse;
  box-shadow: 0 0 15rpx rgba(90, 200, 250, 0.4);
}

.tech-ring.inner {
  width: 40%;
  height: 40%;
  top: 30%;
  left: 30%;
  border-top-color: #00c853;
  border-right-color: #00c853;
  animation: tech-spin-inner 0.9s linear infinite;
  box-shadow: 0 0 10rpx rgba(0, 200, 83, 0.4);
}

.tech-core {
  position: absolute;
  width: 20%;
  height: 20%;
  top: 40%;
  left: 40%;
  background: radial-gradient(circle, #007aff 0%, transparent 70%);
  border-radius: 50%;
  animation: tech-pulse 1.5s ease-in-out infinite;
}

@keyframes tech-spin-outer {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes tech-spin-middle {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(-360deg); }
}

@keyframes tech-spin-inner {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes tech-pulse {
  0%, 100% { opacity: 0.3; transform: scale(0.8); }
  50% { opacity: 1; transform: scale(1.2); }
}

.refresh-text {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 600;
  letter-spacing: 2rpx;
  animation: tech-blink 1.5s ease-in-out infinite;
}

@keyframes tech-blink {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* ==================== 顶部币种Tab切换 ==================== */
.coin-tabs-wrapper {
  background: rgba(28, 28, 30, 0.8);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

.coin-tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.coin-tabs {
  display: inline-flex;
  padding: 8rpx 16rpx;
  gap: 8rpx;
}

.coin-tab {
  position: relative;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 80rpx;
  text-align: center;
}

.coin-tab.active {
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transform: scale(1.05);
}

.coin-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  letter-spacing: 1rpx;
}

.coin-indicator {
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

.indicator-dot {
  width: 6rpx;
  height: 6rpx;
  background: #ffffff;
  border-radius: 50%;
  animation: indicator-pulse 2s ease-in-out infinite;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.8);
}

@keyframes indicator-pulse {
  0%, 100% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.3); opacity: 1; }
}

/* ==================== 价格卡片 ==================== */
.price-card {
  background: rgba(28, 28, 30, 0.6);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}

.price-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #007aff, transparent);
  opacity: 0.5;
}

.price-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.current-price {
  font-size: 56rpx;
  font-weight: 800;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: #34c759;
  letter-spacing: -1rpx;
}

.current-price.red {
  color: #ff3b30;
}

.price-change-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.price-change, .price-percent {
  font-size: 24rpx;
  font-weight: 600;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: #34c759;
}

.price-change.red, .price-percent.red {
  color: #ff3b30;
}

.price-right {
  display: flex;
  gap: 16rpx;
}

.stat-mini {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.stat-mini-label {
  font-size: 18rpx;
  color: #8e8e93;
  font-weight: 500;
}

.stat-mini-value {
  font-size: 22rpx;
  font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
  color: #ffffff;
  font-weight: 600;
}

/* 高 - 绿色 */
.stat-mini:nth-child(1) .stat-mini-value {
  color: #34c759;
}

/* 低 - 红色 */
.stat-mini:nth-child(2) .stat-mini-value {
  color: #ff3b30;
}

/* 量 - 蓝色 */
.stat-mini:nth-child(3) .stat-mini-value {
  color: #007aff;
}

/* ==================== K线图区域 ==================== */
.chart-section {
  margin-bottom: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 图表控制行 */
.chart-controls-row {
  display: flex;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

/* 时间周期选择器 */
.time-period-selector {
  flex: 1;
  display: flex;
  justify-content: space-around;
  background: rgba(28, 28, 30, 0.8);
  border-radius: 10rpx;
  padding: 10rpx 8rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

/* 指标切换按钮 */
.indicator-toggles {
  display: flex;
  gap: 6rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
  align-content: center;
  padding: 6rpx 0;
}

.indicator-btn {
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  font-size: 20rpx;
  color: #8e8e93;
  font-weight: 600;
  transition: all 0.2s;
  min-width: 50rpx;
  text-align: center;
}

.indicator-btn.active {
  background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
  color: #ffffff;
  border-color: rgba(255, 149, 0, 0.5);
  box-shadow: 0 2rpx 8rpx rgba(255, 149, 0, 0.3);
}

.indicator-btn:active {
  transform: scale(0.95);
}

.period-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #8e8e93;
  border-radius: 6rpx;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.period-item.active {
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  color: #ffffff;
  font-weight: 700;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

/* K线图加载提示 */
.chart-loading {
  text-align: center;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.loading-spinner {
  display: flex;
  gap: 8rpx;
}

.spinner-dot {
  width: 12rpx;
  height: 12rpx;
  background: #007aff;
  border-radius: 50%;
  animation: spinner-bounce 1.4s ease-in-out infinite;
}

.spinner-dot:nth-child(1) { animation-delay: 0s; }
.spinner-dot:nth-child(2) { animation-delay: 0.2s; }
.spinner-dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes spinner-bounce {
  0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
  40% { transform: scale(1); opacity: 1; }
}

.chart-loading text {
  font-size: 24rpx;
  color: #8e8e93;
}

.chart-empty {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 24rpx;
  color: #8e8e93;
}

/* ==================== 加载中科技动画 ==================== */
.tech-loader {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.loader-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid transparent;
  animation: loader-spin 2s linear infinite;
}

.loader-ring:nth-child(1) {
  border-top-color: #007aff;
  animation-delay: 0s;
}

.loader-ring:nth-child(2) {
  width: 70%;
  height: 70%;
  top: 15%;
  left: 15%;
  border-right-color: #5ac8fa;
  animation-delay: 0.3s;
  animation-direction: reverse;
}

.loader-ring:nth-child(3) {
  width: 40%;
  height: 40%;
  top: 30%;
  left: 30%;
  border-bottom-color: #00c853;
  animation-delay: 0.6s;
}

@keyframes loader-spin {
  0% { transform: rotate(0deg); opacity: 0.3; }
  50% { opacity: 1; }
  100% { transform: rotate(360deg); opacity: 0.3; }
}

.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 40rpx 24rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #8e8e93;
  letter-spacing: 1rpx;
}

/* ==================== 热点新闻区域 ==================== */
.news-section {
  background: rgba(28, 28, 30, 0.6);
  border-radius: 12rpx;
  margin: 12rpx 0;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.05);
}

/* 新闻标题栏 */
.news-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.news-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.news-icon {
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #FF9500 0%, #FF5E3A 100%);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.news-icon-text {
  font-size: 20rpx;
}

.news-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.news-badge {
  background: #ff3b30;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.news-badge text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
}

.news-expand-icon {
  transition: transform 0.3s ease;
}

.news-expand-icon.expanded {
  transform: rotate(180deg);
}

.news-expand-icon text {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 新闻列表 */
.news-list {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.news-list.expanded {
  max-height: 600rpx;
  overflow-y: auto;
}

/* 新闻项 */
.news-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.03);
}

.news-item:active {
  background: rgba(255, 255, 255, 0.05);
}

.news-item:last-child {
  border-bottom: none;
}

.news-item-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  overflow: hidden;
}

.news-type-tag {
  flex-shrink: 0;
  padding: 4rpx 12rpx;
  background: rgba(0, 122, 255, 0.2);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #007aff;
  font-weight: 500;
}

.news-type-tag.new {
  background: rgba(255, 59, 48, 0.2);
  color: #ff3b30;
}

.news-item-title {
  flex: 1;
  font-size: 26rpx;
  color: #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.news-item-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.news-time {
  font-size: 22rpx;
  color: #8e8e93;
}

.news-arrow {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 新闻加载状态 */
.news-loading,
.news-error,
.news-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 24rpx;
  gap: 16rpx;
}

.news-loading text,
.news-error text,
.news-empty text {
  font-size: 24rpx;
  color: #8e8e93;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.loading-dots .dot {
  width: 12rpx;
  height: 12rpx;
  background: #007aff;
  border-radius: 50%;
  animation: dot-bounce 1.4s ease-in-out infinite;
}

.loading-dots .dot:nth-child(1) { animation-delay: 0s; }
.loading-dots .dot:nth-child(2) { animation-delay: 0.2s; }
.loading-dots .dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes dot-bounce {
  0%, 80%, 100% { transform: scale(0.6); opacity: 0.4; }
  40% { transform: scale(1); opacity: 1; }
}

.retry-btn {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.retry-btn:active {
  opacity: 0.8;
}
