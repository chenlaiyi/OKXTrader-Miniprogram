/* pages/market/market.less */
@import '../../styles/design-system.less';

.container {
  min-height: 100vh;
  background: @bg-primary;
  padding: @padding-page;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* ==================== 当前交易对详情卡片 (iOS风格) ==================== */
.pair-detail-card {
  background: @bg-secondary;
  border-radius: @radius-lg;
  padding: @spacing-lg;
  margin-bottom: @spacing-md;
}

.pair-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: @spacing-md;
}

.pair-info {
  display: flex;
  flex-direction: column;
  gap: @spacing-xs;
}

.pair-name {
  font-size: @font-size-title2;
  font-weight: @font-weight-bold;
  color: @text-primary;
}

.pair-price {
  font-size: 56rpx;
  font-weight: @font-weight-bold;
  font-family: monospace;

  &.green {
    color: @color-green;
  }

  &.red {
    color: @color-red;
  }
}

.pair-change {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: @spacing-xs;
}

.change-percent {
  font-size: @font-size-headline;
  font-weight: @font-weight-semibold;
  font-family: monospace;

  &.green {
    color: @color-green;
  }

  &.red {
    color: @color-red;
  }
}

.change-amount {
  font-size: @font-size-caption1;
  font-family: monospace;

  &.green {
    color: @color-green;
  }

  &.red {
    color: @color-red;
  }
}

.pair-stats {
  display: flex;
  gap: @spacing-lg;
  padding-top: @spacing-md;
  border-top: 1rpx solid @divider-color;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.stat-label {
  font-size: @font-size-caption2;
  color: @text-secondary;
}

.stat-value {
  font-size: @font-size-body;
  font-family: monospace;
  color: @text-primary;
}

/* ==================== K线图占位 (iOS风格) ==================== */
.chart-placeholder {
  height: 600rpx;
  background: @bg-secondary;
  border-radius: @radius-lg;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: @spacing-md;
  margin-bottom: @spacing-md;
}

.chart-icon {
  font-size: 100rpx;
  opacity: 0.3;
}

.chart-text {
  font-size: @font-size-body;
  color: @text-secondary;
}

/* ==================== 分隔线 ==================== */
.divider {
  height: 1rpx;
  background: @divider-color;
  margin: @spacing-md 0;
}

/* ==================== 行情列表 (iOS风格 - 简洁无表头) ==================== */
.market-list {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.market-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: @spacing-md;
  transition: background 0.15s;
  border-radius: @radius-sm;

  &.selected {
    background: fade(@color-blue, 10%);
  }

  &:active {
    background: @bg-tertiary;
  }
}

.pair-name {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pair-ccy {
  font-size: @font-size-body;
  font-weight: @font-weight-semibold;
  color: @text-primary;
}

.quote-ccy {
  font-size: @font-size-caption;
  color: @text-secondary;
}

.pair-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.price-text {
  font-size: @font-size-body;
  font-family: monospace;
  color: @text-primary;
}

.change-percent {
  font-size: @font-size-caption;
  font-family: monospace;
  font-weight: @font-weight-medium;

  &.green {
    color: @color-green;
  }

  &.red {
    color: @color-red;
  }
}

/* ==================== 空状态 ==================== */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: @spacing-md;
  padding: @spacing-xxl;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: @font-size-body;
  color: @text-secondary;
}
