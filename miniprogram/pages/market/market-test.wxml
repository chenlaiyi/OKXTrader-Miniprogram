<view class="container">
  <view class="header">
    <text class="title">API测试页面</text>
  </view>

  <view wx:if="{{loading}}" class="status">
    <text class="loading">正在测试API...</text>
  </view>

  <view wx:if="{{error}}" class="error">
    <text class="error-title">❌ 错误:</text>
    <text class="error-text">{{error}}</text>
  </view>

  <view wx:if="{{result}}" class="success">
    <text class="success-title">✅ 成功:</text>
    <text class="result-text">{{result}}</text>
  </view>
</view>

<style>
.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.status, .error, .success {
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.status {
  background: #e3f2fd;
}

.error {
  background: #ffebee;
}

.success {
  background: #e8f5e9;
}

.loading, .error-title, .success-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.error-text, .result-text {
  font-size: 24rpx;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
}
</style>
